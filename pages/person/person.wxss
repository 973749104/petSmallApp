/* person.wxss */
page{
  width: 100%;
  height: 100%;
}

/* 头像个人信息 */
.avatarInfo{
  width: 100%;
  height: 200rpx;
  background: #FFECB3;
  display: flex;
  align-items: center;
}
.avatarInfo::after{
  border: none;
}
/* 账号信息 */
.avatarInfo .userInfo{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}
.avatarInfo .userInfo .userName{
  font-size: 45rpx;
}

/* .avatarInfo .userInfo .userLevel{

} */
/* 头像 */
.avatarInfo .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  margin: 0 30rpx 0 0;
  overflow: hidden;

}
.avatarInfo .avatar image{
  width: 100%;
  height: 100%;
}
/* 间隔颜文字 */
.kaomoji{
  padding: 18rpx;
  text-align: center;
  font-size: 28rpx;
  color: #FF8A65;
}
/* 功能区 */
.features{
  width: 100%;
  margin-bottom: 80rpx;
  font-size: 30rpx;
}
.featuresItem{
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
}
.featuresItem:first-child{
  border-top: 1rpx solid #efefef;
}
.featuresItem image{
  width: 55rpx; 
  height: 55rpx; 
  margin: 0 20rpx; 
}
/* 退出按钮 */
.loginOut{
  width: 80%;
  color: #fff;
  background: #F44336;
}