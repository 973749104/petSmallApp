/* pages/articleInfo/articleInfo.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
}
/* 头部内容 */
.articleHead{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
 /* .articleHead .articleTitle{

}  */
.articleHead .authorInfo{
  font-size: 25rpx;
} 
/* 文章主内容 */
.content{
  font-size: 25rpx;
}
/* 关注按钮 */
.attection{
  width: 60rpx;
  height: 60rpx;
  padding: 5rpx;
  border-radius: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 30rpx;
  left: 10rpx;
}
.attection image{
  width: 100%;
  height: 100%;
}
/* 收藏按钮 */
.collect{
  width: 60rpx;
  height: 60rpx;
  padding: 5rpx;
  border-radius: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 30rpx;
  right: 10rpx;
}
.collect image{
  width: 100%;
  height: 100%;
  transform: scale(1.2);
}